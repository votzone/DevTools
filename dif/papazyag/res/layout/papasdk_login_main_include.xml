<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:padding="@dimen/dp52" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:gravity="center_vertical" android:background="@drawable/papasdk_papalogin_editback" android:layout_width="fill_parent" android:layout_height="@dimen/dp117">
        <AutoCompleteTextView android:textSize="@dimen/sp40" android:textColor="#ff3c3c3c" android:textColorHint="#ffc4c4c4" android:gravity="center_vertical" android:id="@id/username" android:background="#00000000" android:paddingLeft="@dimen/dp150" android:layout_width="fill_parent" android:layout_height="fill_parent" android:hint="悟饭账号/手机账号" android:singleLine="true" android:dropDownSelector="#ffffffff" android:layout_centerVertical="true" android:imeOptions="actionNext" />
        <ImageView android:id="@id/userIcon" android:layout_width="@dimen/dp57" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp36" android:src="@drawable/papasdk_papalogin_username_icon" android:layout_centerVertical="true" />
        <TextView android:id="@id/textView" android:background="#ffc4c4c4" android:layout_width="@dimen/dp1" android:layout_height="@dimen/dp52" android:layout_marginLeft="@dimen/dp36" android:text="New Text" android:layout_toRightOf="@id/userIcon" android:layout_centerVertical="true" android:layout_alignWithParentIfMissing="false" />
        <ImageView android:id="@id/moreUser" android:padding="@dimen/dp37" android:layout_width="wrap_content" android:layout_height="fill_parent" android:src="@drawable/papasdk_more_user_butn" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout android:gravity="center_vertical" android:id="@id/relativeLayout" android:background="@drawable/papasdk_papalogin_editback" android:layout_width="fill_parent" android:layout_height="@dimen/dp117" android:layout_marginTop="@dimen/dp57">
        <EditText android:textSize="@dimen/sp40" android:textColor="#ff3c3c3c" android:textColorHint="#ffc4c4c4" android:gravity="center_vertical" android:id="@id/passEdit" android:background="#00000000" android:paddingLeft="@dimen/dp150" android:layout_width="@dimen/dp750" android:layout_height="fill_parent" android:hint="请输入密码" android:singleLine="true" android:maxLength="16" android:layout_centerVertical="true" android:inputType="textPassword" android:imeOptions="actionDone" />
        <ImageView android:id="@id/adview" android:layout_width="@dimen/dp57" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp36" android:src="@drawable/papasdk_papalogin_passicon" android:layout_centerVertical="true" />
        <TextView android:id="@id/textView2" android:background="#ffc4c4c4" android:layout_width="@dimen/dp1" android:layout_height="@dimen/dp52" android:layout_marginLeft="@dimen/dp36" android:text="New Text" android:layout_toRightOf="@id/adview" android:layout_centerVertical="true" android:layout_alignWithParentIfMissing="false" />
        <TextView android:textColor="#fff9a435" android:gravity="center_vertical" android:id="@id/forgetPass" android:padding="@dimen/dp25" android:layout_width="wrap_content" android:layout_height="fill_parent" android:src="@drawable/papasdk_more_user_butn" android:text="忘记密码？" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/dp117" android:layout_marginTop="@dimen/dp57">
        <Button android:textSize="@dimen/sp46" android:textColor="@android:color/white" android:id="@id/onekeyRegin" android:background="@drawable/papasdk_papalogin_redbutn_seleter" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/dp117" android:layout_marginRight="@dimen/dp15" android:text="快速游戏" android:layout_weight="1.0" />
        <Button android:textSize="@dimen/sp46" android:textColor="@android:color/white" android:layout_gravity="center_horizontal" android:id="@id/login" android:background="@drawable/papasdk_papalogin_redbutn_seleter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="进入游戏" android:layout_weight="1.0" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/zz" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp57">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0">
            <TextView android:textSize="@dimen/sp40" android:textColor="@color/grey_2" android:ellipsize="none" android:id="@id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="其他方式登录：" android:singleLine="true" />
            <ImageView android:id="@id/phone" android:layout_width="@dimen/dp110" android:layout_height="wrap_content" android:src="@drawable/papasdk_phoneicon" />
        </LinearLayout>
        <Button android:gravity="center_vertical" android:id="@id/backlogin" android:background="@drawable/papasdk_papalogin_type_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>